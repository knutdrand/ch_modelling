entry_points:
  train:
    parameters:
      training_data_filename: path
      model_path: path
    command: "python main.py train {training_data_filename} {model_path}"
  predict:
    parameters:
      model_path: path
      historic_data_filename: path
      test_data: path
      output_filename: path
    command: "python main.py predict {model_path} {historic_data_filename} {test_data} {output_filename}"
